{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.pseudo }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- En-tête du profil -->
    <div class="row align-items-center">
        <div class="col-md-3 text-center">
            {% if user.photo %}
                <img src="{{ asset('uploads/photos/' ~ user.photo) }}" alt="Photo de {{ user.pseudo }}" class="img-fluid rounded-circle shadow-lg" style="width: 150px; height: 150px; object-fit: cover;">
            {% else %}
                <img src="{{ asset('uploads/photos/default.png') }}" alt="Photo par défaut" class="img-fluid rounded-circle shadow-lg" style="width: 150px; height: 150px; object-fit: cover;">
            {% endif %}
        </div>
        <div class="col-md-9">
            <h1 class="display-4">{{ user.pseudo }}</h1>
            <p class="text-muted">Membre depuis le {{ user.dateInscription|date('d M Y') }}</p>
            <p>
                <strong>Email :</strong> {{ user.email }}<br>
                <strong>Date de naissance :</strong> {{ user.dateNaissance|date('d/m/Y') }}
            </p>
            <a href="#edit-profile" class="btn btn-outline-primary btn-sm mt-2">Modifier mon profil</a>
        </div>
    </div>

    <hr class="my-4">

    <!-- Statistiques et activité -->
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Commentaires</h5>
                    <p class="card-text display-6">{{ user.commentaires|length }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Vidéos likées</h5>
                    <p class="card-text display-6">{{ user.videos|length }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Vidéos publiées</h5>
                    <p class="card-text display-6">--</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire de modification -->
    <div id="edit-profile" class="mt-5">
        <h2>Modifier vos informations</h2>
        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.pseudo) }}
                    </div>
                </div>
                <div class="text-end mt-3">
                    {{ form_row(form.submit, { 'label': 'Sauvegarder les modifications' }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <!-- Activité récente -->
    <div class="mt-5">
        <h2>Activité récente</h2>
        <div class="row">
            <div class="col-md-6">
                <h3>Commentaires</h3>
                <div class="list-group shadow-sm">
                    {% for commentaire in user.commentaires %}
                        <div class="list-group-item">
                            <p class="mb-1">{{ commentaire.content|slice(0, 100) ~ '...' }}</p>
                            <small class="text-muted">Publié le {{ commentaire.createdAt|date('d/m/Y à H:i') }}</small>
                        </div>
                    {% else %}
                        <div class="list-group-item text-muted">Aucun commentaire pour l'instant.</div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-6">
                <h3>Vidéos likées</h3>
                <div class="list-group shadow-sm">
                    {% for video in user.videos %}
                        <a href="#" class="list-group-item list-group-item-action">
                            <strong>{{ video.title }}</strong>
                            <small class="text-muted">Ajoutée le {{ video.createdAt|date('d/m/Y') }}</small>
                        </a>
                    {% else %}
                        <div class="list-group-item text-muted">Aucune vidéo likée pour l'instant.</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
