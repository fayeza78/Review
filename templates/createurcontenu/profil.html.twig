{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.pseudo }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Profil de {{ user.pseudo }}</h1>
    <div class="row">
        <div class="col-md-4">
            {% if user.photo %}
                <img src="{{ asset('uploads/photos/' ~ user.photo) }}" alt="Photo de {{ user.pseudo }}" class="img-fluid rounded-circle">
            {% else %}
                <img src="{{ asset('uploads/photos/default.png') }}" alt="Photo par défaut" class="img-fluid rounded-circle">
            {% endif %}
        </div>
        <div class="col-md-8">
            <p><strong>Nom :</strong> {{ user.nom }}</p>
            <p><strong>Prénom :</strong> {{ user.prenom }}</p>
            <p><strong>Email :</strong> {{ user.email }}</p>
            <p><strong>Pseudo :</strong> {{ user.pseudo }}</p>
            <p><strong>Date de naissance :</strong> {{ user.dateNaissance|date('d/m/Y') }}</p>
            <p><strong>Date d'inscription :</strong> {{ user.dateInscription|date('d/m/Y') }}</p>
        </div>
    </div>

    <!-- Formulaire de modification -->
            <div class="col-md-6">
                <h3>Modifier vos informations</h3>
                {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.prenom) }}
                    {{ form_row(form.pseudo) }}
                    <div class="text-end">
                        {{ form_row(form.submit) }}
                    </div>
                {{ form_end(form) }}
            </div>

    <h2 class="mt-4">Activité récente</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>Commentaires</h3>
            <ul>
                {% for commentaire in user.commentaires %}
                    <li>{{ commentaire.content|slice(0, 100) }}...</li>
                {% else %}
                    <li>Aucun commentaire pour l'instant.</li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Vidéos likées</h3>
            <ul>
                {% for video in user.videos %}
                    <li>{{ video.title }}</li>
                {% else %}
                    <li>Aucune vidéo likée pour l'instant.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}