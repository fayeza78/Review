{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="{{ asset('image/logo.png') }}" alt="Logo Review Original">
            <h1>Inscription</h1>
        </div>

        {{ form_start(registrationForm) }}
            {% if error is defined and error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(registrationForm.nom, 'Nom') }}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.nom) }}
                </div>

                <div class="form-group col-md-6">
                    {{ form_label(registrationForm.prenom, 'Prénom') }}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.prenom) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(registrationForm.dateNaissance, 'Date de naissance') }}
                    {{ form_widget(registrationForm.dateNaissance, {
                        'attr': {
                            'class': 'form-control date-input',
                            'placeholder': 'JJ/MM/AAAA'
                        }
                    }) }}
                    {{ form_errors(registrationForm.dateNaissance) }}
                </div>

                <div class="form-group col-md-6">
                    {{ form_label(registrationForm.dateInscription, 'Date d\'inscription') }}
                    {{ form_widget(registrationForm.dateInscription, {
                        'attr': {
                            'class': 'form-control date-input',
                            'placeholder': 'JJ/MM/AAAA'
                        }
                    }) }}
                    {{ form_errors(registrationForm.dateInscription) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.photo, 'Photo de profil') }}
                {{ form_widget(registrationForm.photo, {'attr': {'class': 'form-control-file'}}) }}
                {{ form_errors(registrationForm.photo) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.pseudo, 'Pseudo') }}
                {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.pseudo) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-check mb-4">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, ' Et.   J\'accepte les conditions d\'utilisation et la politique de confidentialité', {'label_html': true, 'attr': {'class': 'form-check-label'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div class="mt-3">
                <button type="submit" class="btn-auth"><span>S'inscrire</span></button>
            </div>

            <div class="auth-footer">
                <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
