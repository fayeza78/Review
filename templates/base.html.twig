<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css">
    <link rel="icon" href="{{ asset('image/icon.png') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link rel="stylesheet" href="style.css">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
    <style>
    .navbar .dropdown .nav-link img {
    border: 2px solid var(--color-primary);}


    html, body {
    height: 100%;
}
body {
    display: flex;
    flex-direction: column;
}
.footer {
    margin-top: auto;
}




        /* Couleurs principales */
        :root {
            --color-bg: #221e1f;
            --color-primary: #2f32dc;
            --color-secondary: #4525d0;
            --color-tertiary: #5c19c4;
            --color-accent: #730db8;
        }

        /* Barre de navigation */
        .navbar {
            width: 100%;
            background-color: var(--color-bg);
            color: #ffffff;
            padding: 15px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            z-index: 1000;
        }

        .navbar a {
            color: #ffffff;
            text-decoration: none;
            padding: 10px 30px;
            font-weight: bold;
            font-size: 1.1em;
            transition: color 0.3s;
        }

        .navbar a:hover {
            color: var(--color-accent);
        }

        .navbar .logo img{
            height: 60px;
        }

        

     /* Footer */
<style>.footer {
    background-color: var(--color-bg);
    color: #ffffff;
    padding: 15px 0;
    width: 100%;
    position: relative;
    bottom: 0;
    text-align: left; /* Centrer le texte horizontalement */
    padding-left: 500px;
    font-size: 0.8em;
}
.footer a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.3s;
    font-size: 0.7em;
}
.footer a:hover {
    color: var(--color-primary);
}</style>




    </style>

    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-lg">
        <a href="/" class="logo">
            <img src="{{ asset('image/logo.png') }}" alt="Logo Review Original">
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a href="/" class="nav-link">Accueil</a>
                </li>
            
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Vidéos</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/list/Video">Mes vidéos</a>
                        <a class="dropdown-item" href="/">Toutes les vidéos</a>
                    </div>
                </li>
                {# <li class="nav-item"><a href="#" class="nav-link">Séries</a></li> #}
                {# <li class="nav-item"><a href="#" class="nav-link">Critiques</a></li> #}
                {# <li class="nav-item"><a href="#" class="nav-link">Contact</a></li> #}
            </ul>

          
             <div class="dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="{{ asset('image/profil.webp') }}" alt="Profil" class="rounded-circle" width="40" height="40">
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Mon Profil</a>
                <a class="dropdown-item" href="#">Paramètres</a>
                <a class="dropdown-item" href="#">Mes favoris</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Déconnexion</a>
            </div>
        </div>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <!-- Footer -->
    

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
</body>

